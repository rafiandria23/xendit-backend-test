{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"target": "ES2021",
		"lib": ["ES6"],
		"types": ["reflect-metadata"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"allowJs": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/*", "src/**/*"],
	"exclude": ["node_modules"]
}
