{
	"extends": "@istanbuljs/nyc-config-typescript",
	"reporter": ["lcov", "html", "text"],
	"extension": [
		".ts"
	],
	"exclude": [
		"src/index.ts",
		"src/components/database.ts",
		"src/types/*.ts",
		"src/**/*.test.ts"
	],
	"include": [
		"src/*",
		"src/**/*"
	],
	"all": true,
	"check-coverage": true,
	"branches": 80,
	"lines": 80,
	"functions": 80,
	"statements": 80
}
