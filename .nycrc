{
  "extends": "@istanbuljs/nyc-config-typescript",
  "reporter": ["lcov", "html", "text"],
  "extension": [".ts"],
  "exclude": [
    "src/index.ts",
    "src/components/database.ts",
    "src/types/*.ts",
    "src/tests/load/*.js",
    "src/**/*.test.ts"
  ],
  "include": ["src/*", "src/**/*"],
  "all": true,
  "check-coverage": true,
  "branches": 100,
  "lines": 100,
  "functions": 100,
  "statements": 100
}
