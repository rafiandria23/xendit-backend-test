{
	"name": "backend-coding-test",
	"version": "1.1.0",
	"description": "A coding assessment for Xendit backend interviews",
	"main": "dist/index.js",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"test": "cross-env NODE_ENV=test mocha -p -r reflect-metadata -r ts-node/register src/**/*.test.ts -b",
		"test:load": "node scripts/load-test.js",
		"coverage": "nyc npm test",
		"artillery": "artillery run src/tests/load/test.yml",
		"api": "node dist/index.js",
		"start": "cross-env NODE_ENV=production run-s clean compile api",
		"clean": "rimraf dist",
		"compile": "tsc",
		"compile:watch": "tsc --watch",
		"watch": "nodemon -q dist/index.js",
		"dev": "cross-env NODE_ENV=development run-p clean compile:watch watch",
		"lint": "eslint .",
		"prepare": "husky install"
	},
	"keywords": [
		"Xendit"
	],
	"author": "Bo",
	"license": "ISC",
	"dependencies": {
		"@hapi/boom": "^10.0.0",
		"cross-env": "^7.0.3",
		"express": "^4.17.3",
		"inversify": "^6.0.1",
		"joi": "^17.6.1",
		"reflect-metadata": "^0.2.0",
		"sequelize": "^6.23.2",
		"sequelize-typescript": "^2.1.3",
		"sqlite3": "^5.0.2",
		"swagger-ui-express": "^5.0.0",
		"winston": "^3.8.2",
		"yamljs": "^0.3.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.0",
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/chai": "^4.3.12",
		"@types/express": "^4.17.14",
		"@types/mocha": "^10.0.0",
		"@types/node": "^20.0.0",
		"@types/sinon": "^17.0.0",
		"@types/supertest": "^6.0.0",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/yamljs": "^0.2.31",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"artillery": "^2.0.0-23",
		"chai": "^5.0.0",
		"eslint": "^8.24.0",
		"eslint-config-xo": "^0.44.0",
		"eslint-config-xo-typescript": "^4.0.0",
		"forever": "^4.0.3",
		"husky": "^9.0.0",
		"mocha": "^10.0.0",
		"nodemon": "^3.0.0",
		"npm-run-all2": "^6.0.0",
		"nyc": "^15.1.0",
		"rimraf": "^5.0.0",
		"sequelize-cli": "^6.5.1",
		"sinon": "^17.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.2.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.0"
	}
}
